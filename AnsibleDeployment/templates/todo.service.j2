[Unit]
Description='todo application'

[Service]
ExecStart=node {{ application }}
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s QUIT $MAINPID
Restart=always
User={{ app_user }}
Group={{ app_group }}
Environment=NODE_ENV=production MYSQL_USER={{ mysql_user }} MYSQL_PASSWORD={{ mysql_pass }} MYSQL_DB= {{ mysql_db }} MYSQL_HOST={{ mysql_host }}

[Install]
WantedBy=multi-user.target